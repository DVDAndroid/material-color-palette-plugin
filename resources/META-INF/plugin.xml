<idea-plugin>
    <id>com.dvd.intellijdea.materialcolorpalette</id>
    <name>Material Color Palette</name>
    <vendor url="https://github.com/dvdandroid/material-color-palette-plugin">dvdandroid</vendor>

    <description><![CDATA[
        This plugin helps you add a Material Color value into the project
        ]]></description>

    <change-notes><![CDATA[
        2.0: <ul>
            <li>Code fixes</li>
            <li>Added support for clipboard</li>
        </ul>
        1.2: <ul>
            <li> Fixed pasting in wrong window</li>
        </ul>
    ]]></change-notes>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Material Palette" anchor="right"
                    factoryClass="com.dvd.intellijdea.materialcolorpalette.ToolWindowFactory"
                    icon="/icons/ic_palette.png"/>
    </extensions>

</idea-plugin>
